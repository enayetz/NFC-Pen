<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.writenfc.writenfc.WriteTAGFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:focusableInTouchMode="true"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="50dp">

                <RelativeLayout

                    android:id="@+id/name_Relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:src="@drawable/baseline_person_black_48" />

                    <EditText
                        android:id="@+id/idETFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_toEndOf="@+id/imageview"
                        android:layout_toLeftOf="@+id/name_dropdown"
                        android:layout_toRightOf="@+id/imageview"
                        android:backgroundTint="#000"
                        android:hint="Name"
                        android:inputType="textCapWords"
                        android:textSize="16dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/name_more_fileds_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idETFirstName"
                        android:layout_toEndOf="@+id/imageview"
                        android:layout_toRightOf="@+id/imageview"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/name_prefix"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Name prefix"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/given_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Given name"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/middle_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Middle name"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/family_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Family name"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Nickname"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/name_dropdown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/baseline_keyboard_arrow_down_black_18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phone_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:src="@drawable/round_phone_black_24dp" />

                    <LinearLayout
                        android:id="@+id/phone_Inner_Linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageview2"
                        android:layout_toRightOf="@+id/imageview2"
                        android:orientation="vertical">

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_related_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:src="@drawable/round_email_black_24dp" />

                    <LinearLayout
                        android:id="@+id/Email_Inner_Linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageview3"
                        android:layout_toRightOf="@+id/imageview3"
                        android:orientation="vertical">

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:src="@drawable/outline_domain_black_48" />

                    <EditText
                        android:id="@+id/idETCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_toEndOf="@+id/imageview4"
                        android:layout_toRightOf="@+id/imageview4"
                        android:backgroundTint="#000"
                        android:hint="Company"
                        android:inputType="textCapSentences"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:src="@drawable/baseline_location_on_black_48" />

                    <EditText
                        android:id="@+id/idETAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/imageview5"
                        android:backgroundTint="#000"
                        android:hint="Address"
                        android:inputType="textCapSentences"
                        android:textSize="16dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/extara_address_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idETAddress"
                        android:layout_toRightOf="@id/imageview5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/street"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:backgroundTint="#000"
                            android:hint="Street"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/po_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@id/imageview5"
                            android:backgroundTint="#000"
                            android:hint="PO box"
                            android:textSize="16dp"
                            android:inputType="textCapSentences" />

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@id/imageview5"
                            android:backgroundTint="#000"
                            android:hint="City"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@id/imageview5"
                            android:backgroundTint="#000"
                            android:hint="State"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/zip_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@id/imageview5"
                            android:backgroundTint="#000"
                            android:hint="ZIP code"
                            android:inputType="textCapSentences"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/address_dropdown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/baseline_keyboard_arrow_down_black_18dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/idBTNnfc"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="Write Tag"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/idBTNOpencontact"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="Open Contact"
                android:textAllCaps="false" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
